<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet  id="create-notification-task-table.1"  author="Alex Elkin">

        <preConditions>
            <not>
                <tableExists tableName = "notification_task"/>
            </not>
        </preConditions>

        <createTable  tableName="notification_task">
            <column  name="id"  type="BIGINT"  autoIncrement="true">
                <constraints  primaryKey="true"  nullable="false"/>
            </column>
            <column  name="text"  type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column  name="chat_id"  type="BIGINT">
                <constraints  nullable="false"/>
            </column>
            <column  name="date_time"  type="DATETIME(6)">
                <constraints  nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="notification_task" indexName="IDX-DATE_TIME">
            <column name="date_time"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>